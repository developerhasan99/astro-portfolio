---
import "aos/dist/aos.css";
// Import Fonts
import "@fontsource-variable/raleway";
import "@fontsource/ibm-plex-sans/400.css";
import "@fontsource/ibm-plex-sans/500.css";
import "@fontsource/ibm-plex-sans/600.css";
// import Main Style
import { ViewTransitions } from "astro:transitions";
import Navbar from "../partials/Navbar.astro";
import Footer from "../partials/Footer.astro";
import "../assets/css/style.css";
import absolute_circle from "../assets/absolute-circle.svg";
---

<html>
	<head>
		<meta charset="utf-8" />
		<meta content="width=device-width, initial-scale=1" name="viewport" />
		<title>Mehedi Hasan - Fullstack Web Developer</title>
		<ViewTransitions />
	</head>
	<body>
		<div class="page-wrapper">
			<div class="absolute-circle">
				<img src={absolute_circle.src} loading="lazy" alt="Absolute Circle" />
			</div>
			<div class="lines-wrapper">
				<div class="absolute-line"></div>
				<div class="absolute-line"></div>
				<div class="absolute-line"></div>
				<div class="absolute-line right-line"></div>
			</div>
			<Navbar />
			<main class="main-wrapper">
				<slot />
				<section class="section-cta">
					<div class="padding-global">
						<div class="container-medium">
							<div class="padding-section-large">
								<div class="cta-component" data-aos="fade-up">
									<div class="text-align-center">
										<div class="caption">Letâ€™s Talk</div>
										<div class="space-small"></div>
										<h2 class="heading-style-h3">
											Discuss your business problems
										</h2>
										<div class="space-small"></div>
										<div class="text-color-grey-400">
											Connect with me! Whether you have a project in mind, want
											to collaborate, or just share ideas, I'm here. Let's bring
											your vision to life together.
										</div>
										<div class="space-small"></div>
										<a href="/contact" class="button w-button">Contact Now</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>
			</main>
			<Footer />
		</div>

		<script src="../js/script.js"></script>
		<script>
			import { aosInit } from "../js/aos";
			// runs on initial page load
			aosInit();
		</script>
	</body>
</html>
